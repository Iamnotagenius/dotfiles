ympc() {
    mpc add `yt-dlp -f b -g "$1"`
}

function br {
    local cmd cmd_file code
    cmd_file=$(mktemp)
    if broot --outcmd "$cmd_file" "$@"; then
        cmd=$(<"$cmd_file")
        rm -f "$cmd_file"
        eval "$cmd"
    else
        code=$?
        rm -f "$cmd_file"
        return "$code"
    fi
}
ftp () {
	doas ftp $1
	if [[ $1 == "start" ]]; then
		mylip=$(ip -brief addr | grep UP | awk '{ print $3 }' | cut -d'/' -f1)
		echo -e "Your ip is \e[32;4m$mylip"
	fi
}

