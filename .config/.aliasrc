latcomp() {
	if [ -z $1 ]; then
		DIR=~/Conspects
	else
		DIR=$1
	fi
	for file in $(ls $DIR/*.tex); do
		pdflatex -output-directory=$DIR/compiled $file
	done
}
mktex() {
	if [ -z $1 ]; then
		echo Название где ёпты
		return 1
	fi
	file=${1%.tex}.tex
	touch $file
		echo   "\documentclass{article}\n\\\usepackage{amsmath,amsfonts}\n\\\usepackage[utf8]{inputenc}\n\\\usepackage[english,russian]{babel}\n\\\begin{document}\n\n\\\end{document}" > $file

	vim +6 $file
}
